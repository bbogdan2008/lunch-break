{
  "name": "lunch-break",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "start": "npm run server:prod",
    "server": "babel-node ./src/bin/server",
    "server:prod": "node ./dist/bin/server",
    "dev": "set NODE_ENV=development & set DEBUG=lunch-break:server & npm-run-all server",
    "clean": "rimraf dist",
    "build:server": "babel ./src --out-dir dist",
    "build:client": "cd client && npm install && npm run build",
    "copy:client": "cp -R ./client/dist/* ./dist/client/",
    "build": "set NODE_ENV=production & npm-run-all clean build:server build:client copy:client",
    "watch": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbogdan2008/lunch-break.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bbogdan2008/lunch-break/issues"
  },
  "homepage": "https://github.com/bbogdan2008/lunch-break#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "connect-mongo": "^3.0.0",
    "cookie-parser": "^1.4.4",
    "core-js": "^3.4.0",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "http-status-codes": "^1.3.2",
    "is-empty": "^1.2.0",
    "mongoose": "^5.7.6",
    "morgan": "^1.9.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.6.4",
    "@babel/node": "^7.6.3",
    "@babel/preset-env": "^7.6.3",
    "nodemon": "^1.19.4"
  },
  "engines": {
    "node": "8.16.2"
  }
}
